@model UserModel

<h2>Registrar minha conta</h2><br />

<form asp-controller="User" asp-action="registrar">
    <div class="form-group">
        <label for="pwd">Nome:</label>
        <input type="text" class="form-control"  asp-for="Nome">
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="email">Email address:</label>
        <input type="email" class="form-control" asp-for="Email">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="pwd">Password:</label>
        <input type="password" class="form-control" asp-for="Senha">
        <span asp-validation-for="Senha" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="pwd">Data de Nascimento:</label>
        <input type="date" class="form-control" asp-for="Data_Nasc">
        <span asp-validation-for="Data_Nasc" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-block btn-success">Registrar</button>
</form>